{
  "name": "I-Vendor Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18-ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [4000, 5173, 5432, 8080, 9000, 9001],
  "postCreateCommand": "npm install -g npm@latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-node-debug2",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,readonly"
  ],
  "remoteUser": "node",
  "onCreateCommand": "echo 'I-Vendor dev environment ready! Run: docker-compose up or cd backend && npm install && npm run dev'"
}
